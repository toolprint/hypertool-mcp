{
  "name": "hypertool-mcp",
  "version": "1.0.0",
  "description": "HyperTool MCP proxy server for routing requests between clients and multiple underlying MCP servers",
  "main": "dist/index.js",
  "bin": {
    "hypertool-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js --debug",
    "start:stdio": "node dist/index.js --debug",
    "start:http": "node dist/index.js --transport http --debug",
    "dev": "npm run build && node dist/index.js --debug",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "OneGrep, Inc.",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@types/ora": "^3.1.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/chalk": "^0.4.31",
    "@types/express": "^5.0.3",
    "@types/node-cache": "^4.1.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^5.1.0",
    "node-cache": "^5.1.2",
    "ora": "^8.2.0",
    "uuid": "^11.0.2"
  }
}
