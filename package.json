{
  "name": "@toolprint/hypertool-mcp",
  "version": "0.0.1",
  "description": "HyperTool MCP proxy server for routing requests between clients and multiple underlying MCP servers",
  "main": "dist/index.js",
  "bin": {
    "hypertool-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js --debug",
    "start:stdio": "node dist/index.js --debug",
    "start:http": "node dist/index.js --transport http --debug",
    "dev": "npm run build && node dist/index.js --debug",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-tools",
    "toolset",
    "proxy",
    "claude",
    "cursor",
    "ai-assistant",
    "dynamic-toolset",
    "mcp-server",
    "mcp-client",
    "mcp-proxy",
    "toolprint",
    "hypertool"
  ],
  "author": "OneGrep, Inc.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/toolprint/hypertool-mcp"
  },
  "homepage": "https://github.com/toolprint/hypertool-mcp#readme",
  "bugs": {
    "url": "https://github.com/toolprint/hypertool-mcp/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@types/ora": "^3.1.0",
    "@types/pino": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/chalk": "^0.4.31",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node-cache": "^4.1.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^5.1.0",
    "figlet": "^1.8.2",
    "inquirer": "^12.7.0",
    "node-cache": "^5.1.2",
    "ora": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.0.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}